<div id="wrapper">
    <div class="content" style="margin-top: 5px">
        <div class="container" style="width: 100%">
            <div class="row">
                <div class="col-md-offset-1 col-md-9 layout-main">
                    <h2 id="bwtitle"></h2>
                </div>
                <div class="col-md-2 text-right">
                    <a class="btn btn-default" href="/cycom/new_import">&lt;&lt; Annuler l'import</a>
                </div>
            </div>
            <div class="col-md-offset-1">
                <form enctype="multipart/form-data" action="validation" method="post">
                    <input type="text" name="table" class="hide" id="tableToSend" />
                    <input type="text" name="partner" class="hide" id="partner" t-att-value="partner"/>
                    <input type="text" name="file_name" class="hide" id="file_name" t-att-value="file_name"/>
                    <input type="text" name="offer_date" class="hide" id="offer_date" t-att-value="offer_date"/>
                    <input type="text" name="is_spot" class="hide" id="is_spot" t-att-value="is_spot"/>
                    <input type="text" name="spot_date" class="hide" id="spot_date" t-att-value="spot_date"/>
                    <input type="text" name="is_producer" class="hide" id="is_producer" t-att-value="is_producer"/>
                    <button type="submit" class="btn btn-success">Valider les modifications</button>
                    <button type="button" class="btn btn-info" id="clear_select">Réinitialiser Sélection</button>
                    <a href="/bigwine/offer-list" id="submit_link" class="hidden"></a>
                </form>
                <div class="layout-main">
                    <div class="portlet" style="padding-top: 10px;">
                        <table class="table table-bordered" id="loadedfiles">
                            <thead>
                                <tr>
                                    <t t-if="len(worksheet) != 0">
                                        <th t-foreach="len(worksheet[0])" t-as="i" style="min-width: 150px;">
                                            <select class="form-control menu-select">
                                                <option t-foreach="default_cols_list" t-as="item">
                                                    <t t-esc="item.name" />
                                                </option>
                                            </select>
                                            <a href="#" class="cancel_import" style="float: right; position: relative;
                                                                        bottom: 25px; right: 17px; height: 0px;">x</a>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <t t-if="len(worksheet) != 0">
                                        <td t-foreach="len(worksheet[0])" t-as="j">
                                            -
                                        </td>
                                    </t>
                                </tr>
                                <tr t-foreach="worksheet" t-as="i">
                                    <td t-foreach="i" t-as="j">
                                        <t t-esc="j" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.portlet -->
                </div>
            </div>

        </div>
    </div>
</div>